{
  "name": "@richardtowers/remark-abbr",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage && micromark-build",
    "format": "prettier . -w --log-level warn && xo --fix",
    "test-dev": "node --conditions development --test",
    "test-prod": "node --conditions production --test",
    "test-api": "npm run test-dev && npm run test-prod",
    "test-coverage": "c8 --100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "xo": {
    "envs": [
      "shared-node-browser"
    ],
    "prettier": true,
    "overrides": [
      {
        "files": [
          "test/**/*.js"
        ],
        "rules": {
          "no-await-in-loop": "off"
        }
      }
    ],
    "rules": {
      "logical-assignment-operators": "off",
      "max-depth": "off",
      "unicorn/no-this-assignment": "off",
      "unicorn/prefer-at": "off",
      "unicorn/prefer-code-point": "off",
      "unicorn/prefer-event-target": "off"
    }
  },
  "keywords": [
    "abbr",
    "abbreviation",
    "markdown",
    "markup",
    "mdast",
    "mdast-util",
    "micromark",
    "micromark-extension",
    "unified",
    "unist",
    "util",
    "utility"
  ],
  "author": "Richard Towers",
  "license": "MIT",
  "type": "module",
  "description": "",
  "exports": {
    "development": "./dev/index.js",
    "default": "./index.js"
  },
  "dependencies": {
    "devlop": "^1.1.0",
    "mdast-util-from-markdown": "^2.0.1",
    "mdast-util-to-markdown": "^2.1.0",
    "micromark-core-commonmark": "^2.0.1",
    "micromark-factory-whitespace": "^2.0.0",
    "micromark-util-character": "^2.1.0",
    "micromark-util-normalize-identifier": "^2.0.0",
    "micromark-util-symbol": "^2.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "@types/unist": "^3.0.3",
    "c8": "^10.1.2",
    "micromark-build": "^2.0.2",
    "prettier": "^3.3.3",
    "rehype-stringify": "^10.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "remark-stringify": "^11.0.0",
    "type-coverage": "^2.29.1",
    "typescript": "^5.6.2",
    "unified": "^11.0.5",
    "xo": "^0.59.3"
  }
}
